/* Fading HR */
hr.faded {
  clear: both; 
  float: none; 
  width: 100%; 
  height: 2px;
  margin: 7px 0;
  border: none; 

	background-image: #eeeeee; /* Old browsers */
	background-image: -moz-linear-gradient(left, #eeeeee 0%, #cccccc 24%, #cccccc 76%, #eeeeee 100%); /* FF3.6+ */
	background-image: -webkit-gradient(linear, left top, right top, color-stop(0%,#eeeeee), color-stop(24%,#cccccc), color-stop(76%,#cccccc), color-stop(100%,#eeeeee)); /* Chrome,Safari4+ */
	background-image: -webkit-linear-gradient(left, #eeeeee 0%,#cccccc 24%,#cccccc 76%,#eeeeee 100%); /* Chrome10+,Safari5.1+ */
	background-image: -o-linear-gradient(left, #eeeeee 0%,#cccccc 24%,#cccccc 76%,#eeeeee 100%); /* Opera 11.10+ */
	background-image: -ms-linear-gradient(left, #eeeeee 0%,#cccccc 24%,#cccccc 76%,#eeeeee 100%); /* IE10+ */
	background-image: linear-gradient(to right, #eeeeee 0%,#cccccc 24%,#cccccc 76%,#eeeeee 100%); /* W3C */
}


