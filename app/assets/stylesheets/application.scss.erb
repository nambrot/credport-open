@import "_variables.css.scss";

// general shit

html, body {
    height: 100%; }
  #container {
    clear: both;
    min-height: 100%;
    height: auto !important;
    height: 100%;
    margin-bottom: -150px;
    .push {
      height: 150px; } }
  body > footer {
    padding: 10px 0 10px 0;
    clear: both;
    position: relative;
    background-color: #268bde;
    color: white;
    @media only screen and (min-width: $mobile_wide) {
      opacity: 0.4;
      @include transition(opacity, 0.15s, ease-out);
      &:hover {
        opacity: 1;
      } 
    }
    section {
      float: right;
      display: inline-block;
      margin: 0 3% 0 2%;

      @media only screen and (max-width: $mobile_wide) {
        width: 90%;
      }
      &.images {
        margin-top: 20px;
        a {
          display: block;
        }
        float: left;
      }
      &.align-left {
        float: left;
        width: 230px;
        @media only screen and (max-width: 1100px) {
          display: none;
        }
      }
      ul {
        list-style: none;
        li {
          a {
            color: white;
            &:hover {
              color: white;
              text-decoration: underline;
            }
          }
        }
      }
    }

     }

