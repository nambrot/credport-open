          position: relative;
          left: 140px;
          top: -10px;
          cursor: pointer;
          display: block;
          height: 20px;
          width: 20px;
          background: url(<%= asset_path 'delete.png' %>);
          -webkit-background-size: cover;
          -moz-background-size: cover;
         -o-background-size: cover;
          background-size: cover; 

