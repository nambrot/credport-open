.badge-box {
  vertical-align: top;
  position: relative;
  width: 240px;
  
  background-image: linear-gradient(bottom, rgb(245,245,245) 25%, rgb(255,255,255) 66%);
  background-image: -o-linear-gradient(bottom, rgb(245,245,245) 25%, rgb(255,255,255) 66%);
  background-image: -moz-linear-gradient(bottom, rgb(245,245,245) 25%, rgb(255,255,255) 66%);
  background-image: -webkit-linear-gradient(bottom, rgb(245,245,245) 25%, rgb(255,255,255) 66%);
  background-image: -ms-linear-gradient(bottom, rgb(245,245,245) 25%, rgb(255,255,255) 66%);

  background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0.25, rgb(245,245,245)),
    color-stop(0.66, rgb(255,255,255))
  );
  
