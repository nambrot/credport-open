body:after {
  content: ".";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}
aside.info {
  cursor: pointer;
  span.trigger {
    position: absolute;
    top: 10px;
    right: 15px;
    border: 3px solid #FFF;
    display: block;
    border-radius: 22px;
    width: 25px;
    height: 25px;
    text-align: center;
    line-height: 19px;
  }
  p {
    @include transition(all, 0.2s, ease-in-out);
    z-index: 10;
    right: -20px;
    opacity: 0;
    position: absolute;
    padding: 10px;
    background-color: rgba(0,0,0,0.9);
    font-size: 12px;
    line-height: 16px;
    font-weight: 100;
    letter-spacing: 1px;
    border-radius: 5px;
    box-shadow: 1px 1px 1px rgba(0,0,0,0.9);
    position: absolute;
    display: none;
    top: -10px;
    width: 200px;
    font-style: normal;
    line-height: 19px;
  }
  &:hover {
    p {
      display: block;
      opacity: 1;
    }
  }
}
.metro-box {
  text-align: left;
  vertical-align: top;
  margin: 16px;
  position: relative;
  .canvas {
    overflow: hidden;
  }
  &.signup-box {
    background-color: $boxcolor2;
  }
  &.recommendations-box {
    background-color: $boxcolor2;
  }
  &.hoverable {
    opacity: 0;
    top: 20px;
    &.show {
      opacity: 1;
      top: 0px;
    }
    -webkit-transition-property: -webkit-transform, top, opacity, box-shadow;
    -webkit-transition-duration: 0s, 0.5s, 0.5s, 0.2s;
    -webkit-transition-timing-function: ease-in-out, ease-in-out, ease-in-out;
    -webkit-transition-delay: 0s;
    -moz-transition-property: -moz-transform, top, opacity, box-shadow;
    -moz-transition-duration: 0s, 0.5s, 0.5s, 0.2s;
    -moz-transition-delay: 0s;
    -moz-transition-timing-function: ease-in-out, ease-in-out, ease-in-out;
    -o-transition-property: -o-transform, top, opacity, box-shadow;
    -o-transition-duration: 0s, 0.5s, 0.5s, 0.2s;
    -o-transition-timing-function: ease-in-out, ease-in-out, ease-in-out;
    -o-transition-delay: 0s;
    transition-property: transform, top, opacity, box-shadow;
    transition-duration: 0s, 0.5s, 0.5s, 0.2s;
    transition-timing-function: ease-in-out, ease-in-out, ease-in-out;
    transition-delay: 0s;
    
    &:hover {
      cursor: pointer;
      @include transform(scale(1.05));
      box-shadow: 10px 10px 20px #252525;
    }
  }
  &.long {
    height: 220px;
    width: 340px;

    .canvas {
      height: 120px;
      overflow: hidden;
    }
    &#reviewbox {        
      .canvas p {
        font-style: italic;
      }
    }
  }
  
  &.square {
    height: 220px;
    width: 220px;
  }
  padding: 20px;
  color: white;
  display: inline-block;
  background-color: #062139;
  
