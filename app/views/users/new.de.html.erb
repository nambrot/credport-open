      <div class="tagline row">
	  <h2>Einfach registrieren!</h2>
	  </div>

  <div class="row signup-login buttons padded-column">
      <div class="four columns" >
	  <h3>Registriere dich mit deiner E-mail</h3>
      <%= form_for @user, :html => {:class => 'nice'} do |f| %> 
      <%= f.label :name, :class => (@user.errors.has_key?(:name) ? 'red' : '') %>
      <%= f.text_field :name, :class => (@user.errors.has_key?(:name) ? 'red input-text ' : 'input-text')%>
      <% if @user.errors.has_key?(:name) %>
        <small class="error"><%= @user.errors.get(:name).join(', ')  %></small>
      <% end %>
      <%= label_tag :email, nil, :class => (@email.errors.has_key?(:email) ? 'red' : '') %>
      <%= text_field_tag :email, @email.email, :class => (@email.errors.has_key?(:email) ? 'red input-text ' : 'input-text') %>  
      <% if @email.errors.has_key?(:email) %>
        <small class="error"><%= @email.errors.get(:email).join(', ')  %></small>
      <% end %>
      <%= f.label :password, :class => (@user.errors.has_key?(:email) ? 'red' : '') %>
      <%= f.password_field :password, :class => (@user.errors.has_key?(:email) ? 'red input-text ' : 'input-text')%>
      <% if @user.errors.has_key?(:password) %>
        <small class="error"><%= @user.errors.get(:password).join(', ')  %></small>
      <% end %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :class => (@user.errors.has_key?(:email) ? 'red input-text ' : 'input-text') %>  
      <% if @user.errors.has_key?(:password) %>
        <small class="error"><%= @user.errors.get(:password).join(', ')  %></small>
      <% end %>
      <%= f.submit 'Signup', :class => 'button' %>
      <% if @user.errors.any? or @email.errors.any? %>  
        <script type="text/javascript">
          $.gritter.add({title: 'Error', text: 'Form is invalid'})
        </script>
      <% end %>
    </div>
    <div class="four columns ">
	  <h3>1-Klick Registrierung</h3>
      <a href="/auth/facebook?origin=<%= URI.escape "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %>" class="button facebook rounded" id='facebook-signup'>
        <div class="icon-button facebook-icon"></div>
        <span>Registrier dich mit Facebook</span>
      </a>
      <a href="/auth/linkedin?origin=<%= URI.escape "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %>" class="button linkedin rounded" id='linkedin-signup'>
        <div class="icon-button linkedin-icon"></div>
        <span>Registrier dich mit LinkedIn</span>
      </a>
      <a href="/auth/twitter?origin=<%= URI.escape "#{request.protocol}#{request.host_with_port}#{request.fullpath}"  %>" class="button twitter rounded" id='twitter-signup'>
        <div class="icon-button twitter-icon"></div>
        <span>Registrier dich mit Twitter</span>
      </a>
     <p> <i>Wir werden niemals auf deinen Konten posten.</i></p>
	  </div>
